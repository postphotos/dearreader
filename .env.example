# DearReader Environment Variables
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to version control - it contains sensitive information

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=2048

# OpenRouter API Configuration
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-4

# Google Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1
GEMINI_MODEL=gemini-pro

# Pinecone Vector Database (optional)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment

# External Monitoring (optional)
MONITORING_API_KEY=your-monitoring-api-key-here

# Proxy Configuration (optional)
HTTP_PROXY=http://127.0.0.1:8080
HTTPS_PROXY=http://127.0.0.1:8080
SOCKS_PROXY=socks5://127.0.0.1:8080

# Performance and Concurrency Settings
MAX_API_CONCURRENCY=50
DEFAULT_CLIENT_CONCURRENCY=5
MAX_QUEUE_LENGTH_PER_CLIENT=20

# Development Settings
NODE_ENV=development
DEBUG=false

# OCR Configuration (optional)
TEST_OCR_ENABLED=false

# Monitoring and Logging (optional)
LOG_LEVEL=info
ENABLE_HEALTH_CHECKS=true