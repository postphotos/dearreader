{
  "name": "reader",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc -p .",
    "build:watch": "tsc --watch",
    "build:clean": "rm -rf ./build",
    "test": "tsx mocha --timeout 45000 --slow 10000 --exit --import test/setup.ts src/**/*.test.ts src/**/__tests__/**/*.ts",
    "test:watch": "tsx mocha --exit --import test/setup.ts --watch src/**/*.test.ts src/**/__tests__/**/*.ts",
    "test:docker": "docker-compose -f ../../docker-compose.test.yml run --rm js-test",
    "shell": "npm run build && firebase functions:shell",
    "emu:stage": "cd .. && tar -czvf firebase-emu-preset.tgz .firebase-emu",
    "emu:reset": "rm -rf ../.firebase-emu && tar -xzf ../firebase-emu-preset.tgz --directory ../",
    "emu:start": "firebase emulators:start --import ../.firebase-emu --export-on-exit",
    "emu:debug": "firebase emulators:start --import ../.firebase-emu --export-on-exit --inspect-functions",
    "emu:debug2": "firebase emulators:start --import ../.firebase-emu --export-on-exit --inspect-functions",
    "emu:kill": "killall java",
    "serve": "npm run build && npm run emu:start",
    "debug": "npm run build && npm run emu:start -- --inspect-functions",
    "from-scratch": "npm run build && rm -rf ../.firebase-emu && firebase emulators:start --export-on-exit",
    "from-preset": "npm run build && npm run emu:reset && npm run emu:start",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "gcp-build": "node node_modules/puppeteer/install.mjs"
  },
  "engines": {
    "node": ">=20"
  },
  "main": "build/index.js",
  "dependencies": {
    "@esm2cjs/normalize-url": "^8.0.0",
    "@google-cloud/translate": "^9.2.0",
    "@mozilla/readability": "^0.6.0",
    "@napi-rs/canvas": "^0.1.78",
    "@types/turndown": "^5.0.5",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "civkit": "^0.9.1-a38f565",
    "core-js": "^3.45.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "htmlparser2": "^10.0.0",
    "jose": "^6.1.0",
    "jsdom": "^26.1.0",
    "langdetect": "^0.2.1",
    "maxmind": "^5.0.0",
    "minio": "^8.0.5",
    "openai": "^5.19.1",
    "pdfjs-dist": "^5.4.149",
    "puppeteer": "^24.19.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-block-resources": "^2.4.3",
    "puppeteer-extra-plugin-page-proxy": "^2.0.0",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "puppeteer-page-proxy": "^1.3.0",
    "reflect-metadata": "^0.2.2",
    "set-cookie-parser": "^2.7.1",
    "stripe": "^18.5.0",
    "tiktoken": "^1.0.22",
    "tld-extract": "^2.1.0",
    "tldts": "^7.0.13",
    "turndown": "^7.2.1",
    "turndown-plugin-gfm": "^1.0.2",
    "undici": "^7.15.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/bcrypt": "^6.0.0",
    "@types/chai": "^5.2.2",
    "@types/cors": "^2.8.19",
    "@types/generic-pool": "^3.8.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.1",
    "@types/set-cookie-parser": "^2.4.10",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "chai": "^6.0.1",
    "eslint": "^9.35.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.32.0",
    "firebase-functions-test": "^3.4.1",
    "fs": "^0.0.1-security",
    "mocha": "^11.7.2",
    "replicate": "^1.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "private": true,
  "exports": {
    ".": "./build/index.js"
  }
}
